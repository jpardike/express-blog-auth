<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All Articles</title>
</head>
<body>
  <header>
    <h1>Express Blog</h1>
    <nav>
      <ul>
        <li>
          <a href="/">Home</a>
        </li>
        <li>
          <a href="/authors">Author Index</a>
        </li>
        <li>
          <a href="/authors/new">Add New Author</a>
        </li>
        <li>
          <a href="/articles">Articles Index</a>
        </li>
        <li>
          <a href="/articles/new">Add New Articles</a>
        </li>
      </ul>
    </nav>
  </header>
  
  <main>
    <h2>All Articles</h2>
    <ul>
      <% allArticles.forEach((article, index) => { %>
        <li>
          <a href="/articles/<%= article.id %>">
            <h2><%= index + 1 %>. <%= article.title %></h2>
          </a>
          <p><%= article.body %></p>
        </li>
      <% }) %>
    </ul>
  </main>
</body>
</html>